@model Product
@{
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.list.Select(x => x.ProductName).Distinct().ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.list.GroupBy(x=>x.ProductName).Select(x => x.Sum(y=>y.Qty)).ToList());
}
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<h2>Index</h2>
<div class="box-body">
    <div class="chart-container" style="width: 100% !important;">
        <canvas id="chart" style="width:100%; height:500px"></canvas>
    </div>
</div>

<table class="table table-bordered " id="productList">
    <thead>
        <tr>
            <td>Id</td>
            <td>Product SUN</td>
            <td>Product Name</td>
            <td>Qty</td>
            <td>On Hand Qty</td>
            <td>Price</td>
            <td>Whole Sale Price</td>
            <td>Status</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.list)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.ProductSun</td>
            <td>@item.ProductName</td>
            <td>@item.Qty</td>
            <td>@item.OnHandQty</td>
            <td>@item.Price</td>
            <td>@item.WholeSalePrice</td>
            @if (item.Status == "Out Of Stock")
            {
                <td><span style="color:red">@item.Status</span></td>
            }
            else
            {
                <td><span style="color:green">@item.Status</span></td>
            }
        </tr>
        }

    </tbody>
</table>

@section Scripts
{
    <script src="~/lib/Chart.js/Chart.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#productList').DataTable();

            var ctx = document.getElementById("chart").getContext('2d');
        var data = {
                labels: @Html.Raw(XLabels),
                datasets: [{
                    label: "Product Chart",
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderWidth: 1,
                    data: @Html.Raw(YValues)
                }]
            };

            var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(255,99,164,0.2)"
                        }
                }],
                    xAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: false
                        }
                    }]
                }
            };

       var myChart = new  Chart(ctx, {
                options: options,
                data: data,
                type:'bar'

            });

        });
    </script>


}
